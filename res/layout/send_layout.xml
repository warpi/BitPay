<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent">


    <TextView android:text="" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/account_address1"></TextView>
<LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Balance: " android:id="@+id/balance_text1"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/balance1" android:text="0 BTC"></TextView>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/updateBalanceButton" android:text="Reload balance"></Button>
</LinearLayout>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/text12" android:text=" "></TextView>

    <TableLayout android:id="@+id/tableLayout2" android:layout_width="fill_parent" android:layout_height="50dip">
        <TableLayout android:layout_height="fill_parent" android:layout_width="220dip" android:id="@+id/receive_account_layout">

            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/receive_account_text" android:text="Receiver Account:"></TextView>
            <EditText android:inputType="textFilter"  android:singleLine="True" android:textSize="14dp" android:layout_height="33dp" android:layout_width="wrap_content" android:id="@+id/receive_account" android:text=" "></EditText>
        </TableLayout>
    </TableLayout>
    <TableLayout android:id="@+id/tableLayout3" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:text="From Camera" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/from_camera_button"></Button>
    </TableLayout>
    <TableLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableLayout4">
        <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/linearLayout2">
            <TextView android:layout_height="wrap_content" android:id="@+id/send_amount_text" android:text="Amount:" android:layout_width="70dip"></TextView>
            <EditText  android:singleLine="True" android:inputType="numberDecimal" android:layout_width="100dp" android:textSize="14dp" android:layout_height="33dp" android:text="0.00" android:id="@+id/input_amount"></EditText>
            <CheckBox android:layout_width="wrap_content" android:text="Use green address" android:id="@+id/green_address" android:layout_height="wrap_content"></CheckBox>
        </LinearLayout>
    </TableLayout>
    <TableLayout android:id="@+id/tableLayout4" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:text="Send" android:layout_width="wrap_content" android:layout_height="55dp" android:id="@+id/send_button"></Button>
    </TableLayout>

</TableLayout>

